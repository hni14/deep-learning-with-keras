digraph perceptron {

    rankdir=LR
	splines=line
        
    node [fixedsize=true, label=""];

    subgraph input_layer {
		label = "input layer";
		color=white;
		node [
			style=solid,
			color=blue4, 
			shape=circle
		];
		x1 [label=x1];
		x2 [label=x2];
	}

	subgraph output_layer {
		label = "output layer";
		color=white;
		node [
			style=solid,
			color=red2, 
			shape=circle,
			height = 1,
    		width = 1,
			fontsize = 7,
		];
		y [label="y=h(w1x1+w2x2+b)"];
	}

    x1 -> y [ label = "w1" ];
    x2 -> y [ label = "w2" ];

}